<!DOCTYPE html>
<html>
  <head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="\css\styles.css" />
  </head>
  <body class="page-content">
    <h1>Resultados de la Búsqueda</h1>

    <h2 class="results-header">Películas <%= movies.length ? movies.length : '' %></h2>
    <% if (movies.length === 0) { %>
    <p class="no-results">No se encontraron películas con ese título.</p>
    <% } else { %>
    <div class="results-grid">
      <% movies.forEach((movie) => { %>
      <a href="/pelicula/<%= movie.movie_id %>" class="result-card">
        <img class="card-img" src="/imgs/poster.jpg" alt="" />
        <div class="card-info">
          <h3 class="card-title"><%= movie.title %></h3>
          <span class="card-tagline"><%= movie.tagline %></span>
        </div>
      </a>
      <% }); %>
    </div>
    <% } %>

    <h2 class="results-header">Actores</h2>
    <% if (actors.length === 0) { %>
    <p class="no-results">No se encontraron actores.</p>
    <% } else { %>
    <div class="results-grid">
      <% actors.forEach((actor) => { %>
      <a href="/actor/<%= actor.person_id %>" class="result-card">
        <img class="card-img" src="./imgs/Tom_Hanks.jpg" alt="" />
        <div class="card-info">
          <h3 class="card-title"><%= actor.person_name %></h3>
        </div>
      </a>
      <% }); %>
    </div>
    <% } %>
  </body>
</html>
