<!DOCTYPE html>
<html>
  <head>
    <title>Resultado de la Búsqueda</title>
    <link rel="stylesheet" href="\css\styles.css" />
    <link rel="stylesheet" href="\css\index.css" />
    <script>
      // Espera a que la página se cargue
      window.addEventListener("DOMContentLoaded", (event) => {
        const navbar = document.querySelector(".navbar");
        navbar.classList.add("visible");
      });
    </script>
  </head>
  <body class="page-content">
    <nav class="navbar">
      <div class="nav-container">
        <a href="#" class="nav-brand">The Movies</a>
        <div class="nav-filters">
          <a href="#">Acción</a>
          <a href="#">Comedia</a>
          <a href="#">Drama</a>
          <a href="#">Terror</a>
        </div>
        <form class="nav-search" action="/buscar" method="GET">
          <input type="text" name="q" placeholder="Buscar películas..." />
          <button type="submit">Buscar</button>
        </form>
      </div>
    </nav>

    <h2 class="results-header">Películas para <span class="results-header-search"><%= toSearch %></span>
    <span class="info-search"><%= movies.length ? '('+String(movies.length)+')' : '' %></span></h2>
    <% if (movies.length === 0) { %>
    <p class="no-results">No se encontraron películas con ese título.</p>
    <% } else { %>
    <div class="results-grid">
      <% movies.forEach((movie) => { %>
      <a href="/pelicula/<%= movie.movie_id %>" class="result-card">
        <img class="card-img" src="./imgs/poster.jpg" alt="" />
        <div class="card-info">
          <h3 class="card-title"><%= movie.title %></h3>
          <span class="card-tagline"><%= movie.tagline %></span>
        </div>
      </a>
      <% }); %>
    </div>
    <% } %>

    <h2 class="results-header">Actores</h2>
    <% if (actors.length === 0) { %>
    <p class="no-results">No se encontraron actores.</p>
    <% } else { %>
    <div class="results-grid">
      <% actors.forEach((actor) => { %>
      <a href="/actor/<%= actor.person_id %>" class="result-card">
        <img class="card-img" src="./imgs/Tom_Hanks.jpg" alt="" />
        <div class="card-info">
          <h3 class="card-title"><%= actor.person_name %></h3>
        </div>
      </a>
      <% }); %>
    </div>
    <% } %>
  </body>
</html>
